# Application
APP_NAME=MyFit API
APP_ENV=development
DEBUG=true
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://myfit:myfit@localhost:5432/myfit
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_REFRESH_SECRET_KEY=your-refresh-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Storage (S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=myfit-uploads

# AI Services
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email (Resend)
# Get your API key at: https://resend.com
RESEND_API_KEY=re_...
EMAIL_FROM=MyFit <noreply@myfit.app>

# Pexels (for exercise videos)
# Get your free API key at: https://www.pexels.com/api/
PEXELS_API_KEY=

GLITCHTIP_DSN=...
GLITCHTIP_SECURITY_ENDPOINT=...

# Push Notifications (Firebase Cloud Messaging)
# Opção 1: Caminho para o arquivo JSON da service account
FIREBASE_CREDENTIALS_PATH=

# Opção 2: JSON completo da service account (para ambientes containerizados)
# FIREBASE_CREDENTIALS_JSON={"type": "service_account", ...}